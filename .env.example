# 服務器配置
PORT=8700
VITE_API_BASE_URL=http://localhost:8700/api

# MongoDB 連接URL
MongoDB_url=mongodb://localhost:27017/your-database-name

# 會話密鑰
SESSION_SECRET=your-session-secret-key

# Cloudflare R2 存儲配置
R2_REGION=auto
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET=your-bucket-name
R2_PUBLIC_URL=https://your-public-url.com

# 環境設定
NODE_ENV=development

# ===== UberEats 設定 =====
# UberEats 使用正式 API 端點，測試通過測試帳號和測試店家 ID 進行
UBEREATS_PRODUCTION_CLIENT_ID=your_production_client_id_from_uber_developer_dashboard
UBEREATS_PRODUCTION_CLIENT_SECRET=your_production_client_secret_from_uber_developer_dashboard

# UberEats OAuth (Authorization Code Flow)
# 用於店家首次授權連接 Uber Eats 帳號
# 開發環境範例：http://localhost:5173/ubereats-oauth-callback
# 正式環境範例：https://yourdomain.com/ubereats-oauth-callback
# 注意：此 URL 必須在 Uber Developer Dashboard 的 Redirect URIs 白名單中設定
UBEREATS_OAUTH_REDIRECT_URI=http://localhost:8700/api/delivery/ubereats/oauth/callback

# UberEats Webhook 簽名驗證密鑰
# 使用 `node scripts/generate-signing-keys.js` 生成密鑰
# 主要密鑰 (必填)
UBEREATS_WEBHOOK_SECRET=your_webhook_signing_secret_from_uber_dashboard
# 備用密鑰 (選填，用於密鑰輪換)
UBEREATS_WEBHOOK_SECRET_SECONDARY=your_secondary_webhook_signing_secret

# ===== foodpanda =====
FOODPANDA_PRODUCTION_USERNAME=your_FOODPANDA_PRODUCTION_USERNAME
FOODPANDA_PRODUCTION_PASSWORD=your_FOODPANDA_PRODUCTION_PASSWORD
FOODPANDA_PRODUCTION_SECRET=your_FOODPANDA_PRODUCTION_SECRET

# ===== 簡訊王 (KotSMS) 設定 =====
# 用於發送手機驗證碼和通知簡訊
KOTSMS_USERNAME=your_kotsms_username
KOTSMS_PASSWORD=your_kotsms_password

# ===== 出單機 設定 =====
PRINTER_USERNAME = your_printer_name
PRINTER_SECRET = your_printer_secret

# ===== Newebpay 設定 =====
NEWEBPAY_MerchantID= # 商店 ID
NEWEBPAY_HASHKEY= # 商店 HashKey
NEWEBPAY_HASHIV= # 商店 HashIV
NEWEBPAY_Version=2.0 # 串接程式版本，2023 年版本為 2.0
NEWEBPAY_ReturnUrl= # 前端回傳網址 只需要填寫網域部分即可，例：https://yourdomain.com
NEWEBPAY_NotifyUrl= # 交易結果通知網址 只需要填寫網域部分即可，例：https://yourdomain.com
NEWEBPAY_PayGateWay=https://ccore.newebpay.com/MPG/mpg_gateway # 測試機、正式機 API 路徑